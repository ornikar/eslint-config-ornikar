{
  "name": "@ornikar/renovate-config",
  "version": "1.12.0",
  "description": "renovate shared config",
  "engines": {
    "node": ">= 8.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "schedule": "before 5am on Monday",
      "prHourlyLimit": 0,
      "prConcurrentLimit": 40,
      "masterIssue": true,
      "masterIssueApproval": true,
      "rebaseStalePrs": true,
      "updateNotScheduled": false,
      "postUpdateOptions": [
        "yarnDedupeHighest"
      ],
      "prBodyNotes": [
        "<!-- do not edit after this -->This will be auto filled by reviewflow.<!-- end - don't add anything after this -->"
      ],
      "labels": [
        ":soon: automerge"
      ],
      "packageRules": [
        {
          "groupName": "Shared Configs Ornikar",
          "packageNames": [
            "@ornikar/browserslist-config",
            "@ornikar/commitlint-config",
            "@ornikar/eslint-config",
            "@ornikar/jest-config",
            "@ornikar/jest-config-react",
            "@ornikar/postcss-config",
            "@ornikar/renovate-config",
            "@ornikar/stylelint-config"
          ],
          "rebaseStalePrs": false,
          "schedule": [
            "at any time"
          ]
        },
        {
          "packagePatterns": [
            "^@ornikar"
          ],
          "rebaseStalePrs": false,
          "masterIssueApproval": false,
          "schedule": [
            "at any time"
          ]
        },
        {
          "groupName": "eslint packages",
          "packageNames": [
            "babel-eslint"
          ],
          "packagePatterns": [
            "^eslint"
          ]
        },
        {
          "groupName": "babel community packages",
          "excludePackageNames": [
            "babel-eslint"
          ],
          "packagePatterns": [
            "^babel"
          ]
        },
        {
          "groupName": "rollup packages",
          "packagePatterns": [
            "^rollup"
          ]
        },
        {
          "groupName": "react",
          "description": "react monorepo",
          "sourceUrlPrefixes": [
            "https://github.com/facebook/react"
          ],
          "packageNames": [
            "@hot-loader/react-dom",
            "@types/react",
            "@types/react-dom"
          ]
        },
        {
          "packageNames": [
            "husky",
            "lint-staged",
            "prettier",
            "yarn-update-lock",
            "yarnhook"
          ],
          "packagePatterns": [
            "^@commitlint",
            "^eslint",
            "^@types"
          ],
          "updateTypes": [
            "patch",
            "minor"
          ],
          "labels": [
            ":ok_hand: code/approved",
            ":soon: automerge"
          ],
          "masterIssueApproval": false,
          "schedule": [
            "before 5:00am"
          ]
        },
        {
          "updateTypes": [
            "pin"
          ],
          "labels": [
            ":ok_hand: code/approved",
            ":soon: automerge"
          ],
          "masterIssueApproval": false,
          "schedule": [
            "at any time"
          ]
        },
        {
          "updateTypes": [
            "major"
          ],
          "schedule": [
            "at any time"
          ],
          "masterIssueApproval": true
        }
      ]
    }
  }
}
