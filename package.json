{
  "name": "@ornikar/shared-configs",
  "private": true,
  "repository": "ornikar/shared-configs",
  "scripts": {
    "lint": "eslint --ext .js --fix @ornikar/**/*.js",
    "release": "lerna publish --conventional-commits -m 'chore: release'"
  },
  "prettier": "./@ornikar/prettier-config",
  "engines": {
    "node": ">=8.3.0",
    "yarn": ">=1.10.1"
  },
  "eslintConfig": {
    "extends": ["./@ornikar/eslint-config/index.js", "./@ornikar/eslint-config-node/index.js"]
  },
  "commitlint": {
    "extends": ["./@ornikar/commitlint-config"]
  },
  "workspaces": ["@ornikar/*"],
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "eslint": "6.1.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-unicorn": "9.1.1",
    "husky": "3.0.6",
    "lerna": "3.16.4",
    "lint-staged": "9.4.0",
    "prettier": "1.18.2",
    "yarn-update-lock": "1.0.0",
    "yarnhook": "0.4.3"
  }
}
