{
  "name": "@ornikar/shared-configs",
  "private": true,
  "repository": "ornikar/shared-configs",
  "scripts": {
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --ext .js --fix .",
    "release": "lerna publish --conventional-commits -m 'chore: release'"
  },
  "prettier": "./@ornikar/prettier-config",
  "engines": {
    "node": ">=12.13.0",
    "yarn": ">=1.10.1"
  },
  "commitlint": {
    "extends": [
      "./@ornikar/commitlint-config"
    ]
  },
  "workspaces": [
    "@ornikar/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@ornikar/eslint-config": "12.3.0",
    "eslint": "6.8.0",
    "husky": "4.3.8",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "yarnhook": "0.5.1"
  }
}
