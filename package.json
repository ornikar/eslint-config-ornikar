{
  "name": "@ornikar/shared-configs",
  "private": true,
  "repository": "ornikar/shared-configs",
  "scripts": {
    "lint": "eslint --ext .js --fix @ornikar/**/*.js",
    "release": "lerna publish --conventional-commits -m 'chore: release'"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "engines": {
    "node": ">=8.3.0",
    "yarn": ">=1.10.1"
  },
  "eslintConfig": {
    "extends": [
      "./@ornikar/eslint-config/index.js",
      "./@ornikar/eslint-config-node/index.js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "yarn.lock": ["yarn-update-lock", "git add"],
    "{package.json,@ornikar/*/{.babelrc,.eslintrc.json,package.json}}": [
      "prettier --parser json --write",
      "git add"
    ],
    "@ornikar/*/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "commitlint": {
    "extends": ["./@ornikar/commitlint-config"]
  },
  "workspaces": ["@ornikar/*"],
  "devDependencies": {
    "@commitlint/cli": "7.6.1",
    "eslint": "5.16.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-node": "9.0.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-unicorn": "8.0.2",
    "husky": "2.2.0",
    "lerna": "3.14.1",
    "lint-staged": "8.1.7",
    "prettier": "1.17.1",
    "yarn-update-lock": "1.0.0",
    "yarnhook": "0.4.0"
  }
}
