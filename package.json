{
  "name": "@ornikar/shared-configs",
  "private": true,
  "repository": "ornikar/shared-configs",
  "scripts": {
    "lint": "eslint --ext .js --fix packages/**/*.js",
    "release": "lerna publish --conventional-commits -m 'chore: release'"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100
  },
  "eslintConfig": {
    "extends": [
      "./packages/@ornikar/eslint-config/index.js",
      "./packages/@ornikar/eslint-config/node.js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "packages/@ornikar/*/{.babelrc,.eslintrc.json,package.json}": [
      "prettier --parser json --write",
      "git add"
    ],
    "packages/@ornikar/*/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "workspaces": [
    "packages/@ornikar/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "eslint": "^4.0.0",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.0.0-beta.21",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "yarnhook": "^0.3.0"
  }
}
