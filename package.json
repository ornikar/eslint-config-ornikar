{
  "name": "@ornikar/shared-configs",
  "private": true,
  "repository": "ornikar/shared-configs",
  "scripts": {
    "lint": "eslint --ext .js --fix @ornikar/**/*.js",
    "release": "lerna publish --conventional-commits -m 'chore: release'"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=1.10.1"
  },
  "eslintConfig": {
    "extends": [
      "./@ornikar/eslint-config/index.js",
      "./@ornikar/eslint-config/node.js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "@ornikar/*/{.babelrc,.eslintrc.json,package.json}": [
      "prettier --parser json --write",
      "git add"
    ],
    "@ornikar/*/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "./@ornikar/commitlint-config"
    ]
  },
  "workspaces": [
    "@ornikar/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "eslint": "^5.3.0",
    "eslint-plugin-prettier": "^2.6.1",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.0.4",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "yarnhook": "^0.3.0"
  }
}
