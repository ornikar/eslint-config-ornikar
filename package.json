{
  "name": "@ornikar/shared-configs",
  "private": true,
  "repository": "ornikar/shared-configs",
  "scripts": {
    "lint": "eslint --ext .js --fix .",
    "lint:prettier-json": "prettier --check {*.json,@ornikar/*/*.json}",
    "release": "lerna publish --conventional-commits -m 'chore: release'"
  },
  "prettier": "./@ornikar/prettier-config",
  "engines": {
    "node": ">=12.16.1",
    "yarn": ">=1.10.1"
  },
  "eslintConfig": {
    "extends": [
      "./@ornikar/eslint-config/index.js",
      "./@ornikar/eslint-config-node/index.js"
    ]
  },
  "commitlint": {
    "extends": [
      "./@ornikar/commitlint-config"
    ]
  },
  "workspaces": [
    "@ornikar/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "eslint": "6.8.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-unicorn": "14.0.1",
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "yarnhook": "0.4.3"
  }
}
