{
  "name": "@ornikar/shared-configs",
  "private": true,
  "repository": "ornikar/shared-configs",
  "scripts": {
    "lint": "eslint --ext .js --fix @ornikar/**/*.js",
    "release": "lerna publish --conventional-commits -m 'chore: release'"
  },
  "prettier": "./@ornikar/prettier-config",
  "engines": {
    "node": ">=8.3.0",
    "yarn": ">=1.10.1"
  },
  "eslintConfig": {
    "extends": ["./@ornikar/eslint-config/index.js", "./@ornikar/eslint-config-node/index.js"]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "yarn.lock": ["yarn-update-lock", "git add"],
    "{package.json,@ornikar/*/{.babelrc,.eslintrc.json,package.json}}": ["prettier --parser json --write", "git add"],
    "@ornikar/*/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "commitlint": {
    "extends": ["./@ornikar/commitlint-config"]
  },
  "workspaces": ["@ornikar/*"],
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "eslint": "5.16.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-unicorn": "9.0.0",
    "husky": "2.4.0",
    "lerna": "3.15.0",
    "lint-staged": "8.2.0",
    "prettier": "1.18.2",
    "yarn-update-lock": "1.0.0",
    "yarnhook": "0.4.1"
  }
}
